@model List<Contact>
@{
    ViewData["Title"] = "Accueil Annuaire";
}
<div>
    <h1>Accueil Annuaire</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Téléphone</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Contact p in Model)
            {
                <tr>
                    <th  scope="row">@p.Id</th>
                    <td>@p.FirstName</td>
                    <td>@p.LastName</td>
                    <td>@p.Phone</td>
                    <td><a asp-controller="Annuaire" asp-action="DetailsContact" asp-route-id="@p.Id">Détails</a></td>
                    <td><a asp-controller="Annuaire" asp-action="DeleteContact" asp-route-id="@p.Id">Supprimer</a></td>
                    <td><a asp-controller="Annuaire" asp-action="FormUpdateContact" asp-route-id="@p.Id">Modifier</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
