@{
    ViewData["Title"] = $"Créer un ";
}

    <form enctype="multipart/form-data" asp-controller="Banque" asp-action="SubmitCompte" method="post">
        <input type="text" name="nom" class="row mb-1 form-control" placeholder="Nom du client" />
        <input type="text" name="prenom" class="row mb-1 form-control" placeholder="Prenom du client" />
        <input type="text" name="telephone" class="row mb-1 form-control" placeholder="Telephone du client" />

        <select name="typeCompte" class="row mb-1 form-control" aria-label="Default select example">
            <option value="compte">Compte</option>
            <option value="epargne">Compte Epargne</option>
            <option value="payant">Compte Payant</option>
        </select>

        <input type="text" name="solde" class="row mb-1 form-control" placeholder="Solde initial"/>
        
        <button class=" btn btn-dark row w-100" type="submit"> Valider</button>
    </form>