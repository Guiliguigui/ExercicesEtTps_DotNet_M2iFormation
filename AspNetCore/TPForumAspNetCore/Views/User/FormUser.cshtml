@model User

@{
    bool ajout = Model == null;
    ViewData["Title"] = $"{(ajout ? "Ajouter" : "Modifier")} Utilisateur";
}

<h1>@(ajout?"Ajouter":"Modifier") Utilisateur</h1>

<div class="row">
    <div class="col">
        <form enctype="multipart/form-data" asp-controller="User" asp-action="AddUser" method="post">
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id :</label>
                <input asp-for="Id" class="form-control" value="@(ajout?"":Model.Id)" readonly />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAdmin" value="@(ajout?"":Model.IsAdmin)" /> Admin
                </label>
            </div>
            <div class="form-group">
                <label asp-for="NickName" class="control-label">Pseudo :</label>
                <input asp-for="NickName" class="form-control" value="@(ajout?"":Model.NickName)" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Prénom :</label>
                <input asp-for="FirstName" class="form-control" value="@(ajout?"":Model.FirstName)" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nom :</label>
                <input asp-for="LastName" class="form-control" value="@(ajout?"":Model.LastName)" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email :</label>
                <input asp-for="Email" class="form-control" value="@(ajout?"":Model.Email)" type="email" />
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Téléphone :</label>
                <input asp-for="Phone" class="form-control" value="@(ajout?"":Model.Phone)" type="tel" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mot de passe :</label>
                <input asp-for="Password" class="form-control" value="@(ajout?"":Model.Password)" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" value="@(ajout ? "Ajouter" : "Modifier")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>