@model Topic

@{
    bool ajout = Model == null;
    ViewData["Title"] = $"{(ajout ? "Ajouter" : "Modifier")} Topic";
}

<h1>@(ajout?"Ajouter":"Modifier") Topic</h1>

<div class="row">
    <div class="col">
        <form enctype="multipart/form-data" asp-controller="Forum" asp-action="AddTopic" method="post">
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id :</label>
                <input asp-for="Id" class="form-control" value="@(ajout?"":Model.Id)" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DateCreation" class="control-label">Date de Création :</label>
                <input asp-for="DateCreation" class="form-control" type="datetime" value="@(ajout?"":Model.DateCreation)" readonly/>
            </div>
            <div class="form-group">
                <label @*asp-for="Author"*@ class="control-label">Auteur :</label>
                <input @*asp-for="Author"*@ class="form-control" value="@(ajout?"":Model.Author.Id)" readonly/> @*Voir pour changer le model (ViewModel) ou appeler au moment du click*@
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Nom :</label>
                <input asp-for="Subject" class="form-control" value="@(ajout?"":Model.Subject)" />
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Texte :</label>
                <textarea asp-for="Text" class="form-control" type="email" >@(ajout?"":Model.Text)</textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="@(ajout ? "Ajouter" : "Modifier")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>